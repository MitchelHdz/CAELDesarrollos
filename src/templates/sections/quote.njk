{% extends "partials/base.njk" %}

{% block meta %}
{% endblock %}

{% block content %}
<form action="https://caelmailing.herokuapp.com/formData" method="post" accept-charset="utf-8">
  <div class="cael-quote-container neopraxis-flex-column">
    <div class="cael-quote-title-container neopraxis-flex-row">
      <div class="cael-quote-title-line"></div>
      <h1 class="cael-quote-title no-margin-text cael-brown-text neopraxis-font-montserrat-regular">¡Haz tu cotización ahora!</h1>
      <div class="cael-quote-title-line"></div>
    </div>
    <div class="cael-quote-form-container neopraxis-flex-row">
      <div class="cael-quote-basic-info-container neopraxis-flex-column">
        <div class="cael-quote-input-box">
          <p class="cael-quote-input-label neopraxis-font-myriadpro-regular no-margin-text">Nombre:</p>
          <input type="text" id="name" name="name" value="" placeholder="Nombre" class="cael-quote-input neopraxis-font-myriadpro-regular" required>
        </div>
        <div class="cael-quote-input-box">
          <p class="cael-quote-input-label neopraxis-font-myriadpro-regular no-margin-text">Correo electrónico:</p>
          <input type="email" id="email" name="email" value="" placeholder="Correo electrónico" class="cael-quote-input neopraxis-font-myriadpro-regular" required>
        </div>
        <div class="cael-quote-input-box">
          <p class="cael-quote-input-label neopraxis-font-myriadpro-regular no-margin-text">Teléfono:</p>
          <input type="number" id="phone" name="phone" value="" placeholder="Teléfono" class="cael-quote-input neopraxis-font-myriadpro-regular" required>
        </div>
        <div class="cael-quote-input-box">
          <p class="cael-quote-input-label neopraxis-font-myriadpro-regular no-margin-text">Mensaje:</p>
          <textarea id="message" name="message" value="" placeholder="Escribe tu mensaje" rows="5" class="cael-quote-input neopraxis-font-myriadpro-regular" required ></textarea>
        </div>
        <div class="cael-quote-input-box">
          <p class="cael-quote-input-label neopraxis-font-myriadpro-regular no-margin-text">Día:</p>
          <select name="day" id="day" class="cael-quote-input neopraxis-font-myriadpro-regular" required >
            <option value="" disabled selected>Escoge el día</option>
            <option value="Martes">Martes</option>
            <option value="Miercoles">Miércoles</option>
            <option value="Jueves">Jueves</option>
            <option value="Viernes">Viernes</option>
            <option value="Sabado">Sábado</option>
            <option value="Domingo">Domingo</option>
          </select>
        </div>
        <div class="cael-quote-input-box">
          <p class="cael-quote-input-label neopraxis-font-myriadpro-regular no-margin-text">Hora:</p>
          <select name="hour" id="hour" class="cael-quote-input neopraxis-font-myriadpro-regular" required >
            <option value="" disabled selected>Escoge la hora</option>
            <option value="1030">10:30</option>
            <option value="1100">11:00</option>
            <option value="1130">11:30</option>
            <option value="1200">12:00</option>
            <option value="1230">12:30</option>
            <option value="1300">12:00</option>
            <option value="1330">13:30</option>
            <option value="1400">13:00</option>
            <option value="1430">14:30</option>
            <option value="1500">15:00</option>
            <option value="1530">15:30</option>
            <option value="1600">16:00</option>
          </select>
        </div>
      </div>
      <div class="cael-quote-prizes-container neopraxis-flex-column">
        <div class="cael-quote-input-box">
          <p class="cael-quote-input-label neopraxis-font-myriadpro-regular no-margin-text">Fraccionamiento:</p>
          <select name="division" id="division" class="cael-quote-input neopraxis-font-myriadpro-regular" required >
            <option value="" disabled selected>Escoge tu fraccionamiento</option>
            <option value="1">Flor de Piedra</option>
            <option value="2">Vista Hermosa</option>
            option
          </select>
        </div>
        <div class="cael-quote-input-box">
          <p class="cael-quote-input-label neopraxis-font-myriadpro-regular no-margin-text hasValue">Presupuesto:</p>
          <select name="landFlower" id="landFlower" class="cael-quote-input neopraxis-font-myriadpro-regular">
            <option value="" disabled selected>Precio y tamaño del terreno</option>
            <option value="100000">200 mts - 100,000.00</option>
            <option value="200000">Vista Hermosa</option>
          </select>
          <select name="landView" id="landView" class="cael-quote-input neopraxis-font-myriadpro-regular">
            <option value="" disabled selected>Precio y tamaño del terreno</option>
            <option value="100000">200 mts - 15,000.00</option>
            <option value="200000">Vista Hermosa</option>
          </select>
        </div>
        <div class="cael-quote-input-box">
          <p class="cael-quote-input-label neopraxis-font-myriadpro-regular no-margin-text hasValue">Porcentaje de enganche:</p>
          <input type="range" min="10" max="50" value="10" step="10" class="slider neopraxis-font-myriadpro-regular" id="percentage" name="percentage">
          <div class="cael-percentage-box neopraxis-flex-row">
            <p class="cael-percentage-text neopraxis-font-myriadpro-regular no-margin-text active" percentage="10">10%</p>
            <p class="cael-percentage-text neopraxis-font-myriadpro-regular no-margin-text" percentage="20">20%</p>
            <p class="cael-percentage-text neopraxis-font-myriadpro-regular no-margin-text" percentage="30">30%</p>
            <p class="cael-percentage-text neopraxis-font-myriadpro-regular no-margin-text" percentage="40">40%</p>
            <p class="cael-percentage-text neopraxis-font-myriadpro-regular no-margin-text" percentage="50">50%</p>
          </div>
        </div>
        <div class="cael-quote-pay-box neopraxis-flex-column">
          <p class="cael-quote-pay-text neopraxis-font-myriadpro-regular no-margin-text cael-brown-text">45 mensualidades de:</p>
          <p class="cael-quote-pay-value neopraxis-font-myriadpro-regular no-margin-text cael-orange-text">0,000.00</p>
          <input type="hidden" name="month" value="" id="month">
        </div>
        <div class="cael-quote-button-box">
          <button type="submit" class="cael-quote-button no-margin-text cael-white-text neopraxis-font-montserrat-regular uppercase">enviar</button>
        </div>
      </div>
    </div>
  </div>
</form>  
{% endblock %}